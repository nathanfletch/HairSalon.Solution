@{
  Layout = "_Layout";
}

<h2>Add a stylist</h2>

@model HairSalon.Models.Stylist

@using(@Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, null, new {@class="form-control"})
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty, null, new {@class="form-control"})
  <input type="submit" value="Add stylist" class="mt-3 btn btn-primary"/>
}

@Html.ActionLink("Back to stylist list", "Index", null, null, new {@class="mt-3 btn btn-warning"})
