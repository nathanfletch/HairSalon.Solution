@using HairSalon.Models

@{
  Layout = "_Layout";
}

<h2>All stylists</h2>

@if(Model.Count == 0)
{
  <h3>There are no stylists</h3>
}

<ul class="list-group">
  @foreach (Stylist stylist in Model)
  {
    <li class="list-group-item">@Html.ActionLink($"{@stylist.Name}", "Details", new { id = stylist.StylistId }) </li>
  }
</ul>

<p>@Html.ActionLink("Add a stylist", "Create", null, null, new {@class="mt-3 btn btn-primary"})</p>
<p>@Html.ActionLink("Go home", "Index", "Home", null, new {@class="btn btn-warning"})</p>