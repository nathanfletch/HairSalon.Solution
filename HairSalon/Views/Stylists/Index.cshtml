@using HairSalon.Models

@{
  Layout = "_Layout";
}

<h2>All stylists</h2>

@if(Model.Count == 0)
{
  <h3>There are no stylists</h3>
}

<ul>
  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{@stylist.Name}", "Details", new { id = stylist.StylistId }) </li>
  }
</ul>

@Html.ActionLink("Add a stylist", "Create")
@Html.ActionLink("Go home", "Index", "Home")