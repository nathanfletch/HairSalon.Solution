@using HairSalon.Models
@using System
@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylist

<h2>Stylist Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>
<h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)<h3>

@if(@ViewBag.ClientsList.Count != 0)
{
  <ul>
    @foreach(Client client in @ViewBag.ClientsList)
    {
      <li><p>@client.Name</p></li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a new client", "Create", "Clients", new { id = @Model.StylistId})</p>
<p>@Html.ActionLink("View all stylists", "Index")</p>